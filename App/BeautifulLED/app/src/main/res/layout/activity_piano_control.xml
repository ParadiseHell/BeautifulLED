<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.chengtao.beautifulled.activity.PianoControlActivity">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:contentDescription="@string/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/icon" />
        <Button
            android:id="@+id/iv_left_arrow"
            android:contentDescription="@string/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/left_arrow"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"/>

        <SeekBar
            android:background="@drawable/piano_bar"
            android:id="@+id/sb"
            android:progressDrawable="@null"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/iv_right_arrow"
            android:contentDescription="@string/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/right_arrow"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"/>
        <Button
            android:id="@+id/iv_music"
            android:contentDescription="@string/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music" />
    </LinearLayout>
    <com.chengtao.pianoview.view.PianoView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.chengtao.pianoview.view.PianoView>
</LinearLayout>
<ImageView
    android:id="@+id/iv_tip_auto_play"
    android:contentDescription="@string/app_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tip_auto_play" />
</RelativeLayout>